{
  "name": "rescript-dinero",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "res:build": "npm run res:build:core && npm run res:build:calculator-number && npm run res:build:calculator-bigint && npm run res:build:currencies",
    "res:build:core": "cd packages/core && npx rescript",
    "res:build:calculator-number": "cd packages/calculator-number && npx rescript",
    "res:build:calculator-bigint": "cd packages/calculator-bigint && npx rescript",
    "res:build:currencies": "cd packages/currencies && npx rescript",
    "res:clean": "npm run res:clean:core && npm run res:clean:calculator-number && npm run res:clean:calculator-bigint && npm run res:clean:currencies",
    "res:clean:core": "cd packages/core && npx rescript clean",
    "res:clean:calculator-number": "cd packages/calculator-number && npx rescript clean",
    "res:clean:calculator-bigint": "cd packages/calculator-bigint && npx rescript clean",
    "res:clean:currencies": "cd packages/currencies && npx rescript clean",
    "res:dev": "npm run res:dev:core & npm run res:dev:calculator-number & npm run res:dev:calculator-bigint & npm run res:dev:currencies",
    "res:dev:core": "cd packages/core && npx rescript watch",
    "res:dev:calculator-number": "cd packages/calculator-number && npx rescript watch",
    "res:dev:calculator-bigint": "cd packages/calculator-bigint && npx rescript watch",
    "res:dev:currencies": "cd packages/currencies && npx rescript watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage"
  },
  "keywords": [
    "rescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "rescript": "^12.1.0"
  },
  "devDependencies": {
    "vitest": "^1.0.0",
    "@vitest/coverage-v8": "^1.0.0"
  }
}
