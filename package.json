{
  "name": "@dinero.js/monorepo",
  "version": "2.0.0-alpha.15",
  "private": true,
  "license": "MIT",
  "packageManager": "npm@11.5.2",
  "type": "module",
  "workspaces": [
    "packages/*",
    "examples/*",
    "docs"
  ],
  "scripts": {
    "build:clean": "turbo build:clean",
    "build:esm": "turbo build:esm --filter=./packages/*",
    "build:definitions": "turbo build:definitions --filter=./packages/*",
    "build:types": "turbo build:types --filter=./packages/*",
    "build:umd:cjs": "turbo build:umd:cjs --filter=./packages/*",
    "build": "turbo build --filter=./packages/*",
    "format": "prettier --write .",
    "lint": "oxlint packages/ scripts/ test/",
    "prepare": "husky && npm run build",
    "release": "shipjs prepare",
    "test:size": "size-limit",
    "test:types": "tsc --noEmit",
    "test": "vitest",
    "docs:dev": "npm run dev -w @dinero.js/docs",
    "docs:build": "npm run build -w @dinero.js/docs",
    "docs:preview": "npm run preview -w @dinero.js/docs"
  },
  "devDependencies": {
    "@babel/cli": "^7.26.4",
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-typescript": "^7.26.0",
    "@microsoft/api-extractor": "^7.49.2",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-replace": "^6.0.2",
    "@rollup/plugin-terser": "^0.4.4",
    "@size-limit/file": "^11.1.6",
    "@types/big.js": "6.1.6",
    "@vitest/coverage-v8": "^4.0.18",
    "ajv": "^8.17.1",
    "babel-loader": "^9.2.1",
    "babel-plugin-inline-replace-variables": "1.3.1",
    "babel-plugin-module-resolver": "4.1.0",
    "big.js": "6.2.1",
    "cross-spawn": "7.0.3",
    "fast-check": "^3.23.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "oxlint": "^1.42.0",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "rollup": "^4.30.1",
    "rollup-plugin-filesize": "^10.0.0",
    "shipjs": "^0.27.0",
    "size-limit": "^11.1.6",
    "ts-node": "^10.9.2",
    "turbo": "^2.4.2",
    "typescript": "^5.7.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  }
}
