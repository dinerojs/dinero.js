{
  "name": "@dinero.js/monorepo",
  "version": "2.0.0-alpha.16",
  "private": true,
  "license": "MIT",
  "packageManager": "npm@11.9.0",
  "type": "module",
  "workspaces": [
    "packages/*",
    "examples/*",
    "docs"
  ],
  "scripts": {
    "build:clean": "turbo build:clean",
    "build": "turbo build --filter=./packages/*",
    "format": "prettier --write .",
    "lint": "oxlint packages/ test/",
    "prepare": "husky && npm run build",
    "release": "shipjs prepare",
    "test:size": "size-limit",
    "test:types": "tsc -p tsconfig.json --noEmit",
    "test": "vitest",
    "docs:dev": "npm run dev -w @dinero.js/docs",
    "docs:build": "npm run build -w @dinero.js/docs",
    "docs:preview": "npm run preview -w @dinero.js/docs"
  },
  "devDependencies": {
    "@size-limit/file": "^12.0.0",
    "@types/big.js": "6.2.2",
    "@vitest/coverage-v8": "^4.0.18",
    "big.js": "^7.0.1",
    "fast-check": "^4.5.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "oxlint": "^1.42.0",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "shipjs": "^0.28.0",
    "size-limit": "^12.0.0",
    "turbo": "^2.8.1",
    "typescript": "^5.7.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  }
}
