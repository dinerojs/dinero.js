{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build:clean": {
      "cache": false
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.ts", "tsdown.config.ts", "tsconfig.json"],
      "outputs": ["dist/**"]
    },
    "test": {
      "dependsOn": [],
      "inputs": ["src/**/*.ts"],
      "outputs": []
    },
    "lint": {
      "inputs": ["**/*.ts", "**/*.js"],
      "outputs": []
    }
  },
  "globalDependencies": [
    ".oxlintrc.json",
    ".prettierrc",
    ".size-limit.json",
    "vitest.config.ts",
    "tsconfig.json"
  ]
}
