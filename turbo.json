{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build:clean": {
      "outputs": []
    },
    "build:tsc": {
      "dependsOn": ["build:clean"],
      "inputs": ["src/**/*.ts"],
      "outputs": ["lib/**/*"]
    },
    "build:types": {
      "dependsOn": ["^build:types", "build:tsc"],
      "inputs": ["lib/**/*.d.ts"],
      "outputs": ["etc/**/*", "dist/esm/index.d.ts"]
    },
    "build:esm": {
      "dependsOn": ["build:clean"],
      "inputs": ["src/**/*.ts"],
      "outputs": ["dist/esm/**/*.js"]
    },
    "build:umd:cjs": {
      "dependsOn": ["build:clean", "build:esm"],
      "inputs": ["src/**/*.ts"],
      "outputs": ["dist/cjs/**/*.js", "dist/umd/**/*.js"]
    },
    "test": {
      "dependsOn": ["test"],
      "outputs": [],
      "inputs": ["src/**/*.ts"]
    },
    "build": {
      "dependsOn": ["build:esm", "build:umd:cjs", "build:types"],
      "outputs": ["dist/**"]
    },
    "lint": {
      // A package's `lint` script has no dependencies and
      // can be run whenever. It also has no filesystem outputs.
      "outputs": [],
      "inputs": ["**/*.ts", "**/*.js"]
    },
    "prepare": {
      "dependsOn": ["build"],
      "outputs": []
    }
  },
  "globalDependencies": [".eslintrc.js", ".prettierrc", "tsconfig.json"]
}
