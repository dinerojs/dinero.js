{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "module": "es2015",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNEXT"
  },
  "exclude": [
    "**/__fixtures__/**/*",
    "**/__mocks__/**/*",
    "**/__tests__/**/*",
    "**/dist",
    "**/lib",
    "**/temp",
    "**/node_modules",
    "stories",
    "examples",
    "website"
  ]
}
