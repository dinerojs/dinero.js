{
  "compilerOptions": {
    "types": ["vitest/globals"],
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "module": "es2015",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNEXT",
    "noEmit": true,
    "baseUrl": "./",
    "paths": {
      "dinero.js": ["packages/dinero.js/src/index"],
      "dinero.js/currencies": ["packages/dinero.js/src/currencies/index"],
      "dinero.js/bigint": ["packages/dinero.js/src/bigint/index"],
      "test-utils": ["test/utils/index"]
    }
  },
  "exclude": [
    "**/dist",
    "**/lib",
    "**/temp",
    "**/node_modules",
    "website",
    "examples/deno"
  ]
}
