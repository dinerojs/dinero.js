{
  "name": "dinero.js",
  "version": "3.0.0-alpha.15",
  "description": "Create, calculate, and format money in JavaScript and TypeScript",
  "keywords": [
    "money",
    "monetary",
    "amount",
    "immutable",
    "pure",
    "side-effect free"
  ],
  "homepage": "https://v2.dinerojs.com",
  "bugs": "https://github.com/dinerojs/dinero.js/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/dinerojs/dinero.js.git"
  },
  "license": "MIT",
  "author": {
    "name": "Sarah Dayan",
    "url": "https://sarahdayan.dev"
  },
  "sideEffects": false,
  "type": "module",
  "main": "./lib/es6/src/index.js",
  "module": "./lib/es6/src/index.js",
  "exports": {
    ".": "./lib/es6/src/index.js"
  },
  "files": [
    "lib/"
  ],
  "scripts": {
    "prebuild": "yarn res:build",
    "build": "rollup --config",
    "clean": "rm -rf dist lib node_modules .yarn yarn.lock.tmp rescript.lock; (rm -f .pnp.* || true)",
    "pretest": "yarn res:build",
    "test": "vitest --run --config ../../vitest.config.js",
    "res:build": "rescript",
    "res:clean": "rescript clean",
    "res:dev": "rescript watch",
    "res:format": "rescript format",
    "res:format:check": "rescript format --check"
  },
  "dependencies": {
    "@dinero.js/calculator-bigint": "workspace:*",
    "@dinero.js/calculator-number": "workspace:*",
    "@dinero.js/core": "workspace:*",
    "@dinero.js/currencies": "workspace:*"
  },
  "devDependencies": {
    "big.js": "^6.2.1",
    "rescript": "^12.1.0"
  }
}
